<h1>講師マイページ</h1>
<%= notice %>

<table>
  <tr><th>講師ID</th> <td><%= @user %></td></tr>
  <tr><th>講師名</th> <td><%= @users.name %></td></tr>
</table>

<table border="1">
  <th>登録日</th>
  <% if @freedays.length == 0 then %>
    <tr><td>未登録</td></tr>
  <% end %>
  <% @freedays.each do |f|  %>
    <tr><td><%= f.begin %>〜<%= f.end %></td></tr>
  <% end %>
</table>

<table border="1">
  <th>登録日追加</th>
  <tr><td>追加用</td></tr>
</table>

<table border="1">
  <th>登録済みスキル</th>
    <% if @skills.length == 0 then %>
      <tr><td>未登録</td></tr>
    <% end %>
  <% @skills.each do |f|  %>
    <tr><td><%= f.skill_master.skilltype %></td></tr>
  <% end %>
</table>

<%= debug(@users) %>
