<h1><div class="lecturerMyPageText">講師マイページ</div></h1>
<div class="blockA">
<div class="msg">
  メッセージ：
  <% if flash.empty? then %>
    なし
  <% else %>
    <%= flash.now[:notice] %>
  <% end %>
</div>

  <!-- 講師情報 -->
  <table class="selfTable">
    <tr><th>講師ID</th><th>講師名</th><th>平均評価</th></tr>
    <td><%= @usr.id %></td><td><%= @usr.name %></td><td><%= @status.present? ? @status.average(:score) : 'なし'  %></td></tr>
  </table>

  <!-- 期間登録 -->
  <%= form_for(@newfreeday, :url => {:action => 'create_free'} ,method: :post) do |f| %>
    <%= f.hidden_field :user_id, :value => @usr.id %>
    <%= f.date_field :begin  %> 〜 <%= f.date_field :end  %>
    <div class="entryDaysButton">
    <%= f.submit '期間登録' %>
  <% end %>
  </div>

  <!-- スキル登録 -->
  <% if @addskills.present? then %>
  <div class="entrySkill">
    <%= form_tag action: :add_skill do %>
      <%= select_tag :addskill, options_from_collection_for_select(@addskills ,:id ,:skilltype ) %>
      <span class="entrySkillButton"><%= submit_tag 'スキル登録' %></span>
    <% end %>
  <% end %>
  </div>

  <!-- 受付期間一覧 -->
  <div style="float:left">
    <table border="1" class="entryDaysTable">
      <th>申請受付期間</th>
      <% if @freedays.empty? then %>
        <tr>
          <td>未登録</td>
        </tr>
      <% else %>
        <%= form_tag action: :delete_free  do %>
          <% @freedays.each do |f|  %>
            <tr>
              <td>
                <%= check_box_tag("freeday_id[]", f.id ) %>
                <%= f.begin %>〜<%= f.end %>
              </td>
            </tr>
          <% end %>
          <div class="DeleteDaysButton">
          <%= submit_tag '選択期間削除' %>
        </div>
        <% end %>
      <% end %>
    </table>
  </div>

  <!-- 登録スキル一覧 -->
  <div>
    <table border="1" class="entrySkillTable">
      <th>登録済みスキル</th>
      <% if @skills.length == 0 then %>
        <tr>
          <td>未登録</td>
        </tr>
      <% else %>
        <%= form_tag action: :delete_skill do %>
          <% @skills.each do |f|  %>
            <tr>
              <td>
                <%= check_box_tag("skill_id[]", f.id ) %>
                <%= f.skill_master.skilltype %>
              </td>
            </tr>
          <% end %>
          <div class="deleteSkillButton">
          <%= submit_tag '選択スキル削除' %>
        </div>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<div class="blockB">
  <table border="1" class="historyLectureTable">
    <tr>
      <th colspan="4">講師履歴</th>
    </tr>
    <tr>
      <th>会社名</th>
      <th>スキル</th>
      <th>日付</th>
      <th>評価</th>
    </tr>
    <% @status.each do |f| %>
      <tr>
        <td><%= f.company.companyname %></td>
        <td><%= f.skill_master.skilltype %></td>
        <td><%= f.date %></td>
        <td align='center'><%= f.score %></td>
      </tr>
    <% end %>
  </table>
</div>
<hr style="clear:left">
