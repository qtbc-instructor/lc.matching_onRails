<h1>講師マイページ</h1>
<%= notice %>

<table>
  <tr><th>講師ID</th> <td><%= @user %></td></tr>
  <tr><th>講師名</th> <td><%= @users.name %></td></tr>
</table>

<table border="1">
  <th>登録日</th>
  <% if @freedays.length == 0 then %>
    <tr><td>未登録</td></tr>
  <% end %>
  <% @freedays.each do |f|  %>
    <tr><td><%= f.begin %>〜<%= f.end %></td></tr>
  <% end %>
</table>

<table border="1">
  <th>登録日追加</th>
  <tr><td>追加用</td></tr>
</table>

<table border="1">
  <th>登録済みスキル</th>
    <% if @skills.length == 0 then %>
      <tr><td>未登録</td></tr>
    <% end %>
  <% @skills.each do |f|  %>
    <tr><td><%= f.skill_master.skilltype %></td></tr>
  <% end %>
</table>

<br>
<% if !@application.nil? then %>
  <h3>通知</h3>
  <table border="1">
    <tr>
      <td>会社名</td>
      <td>スキル</td>
      <td>日付</td>
    </tr>
    <%= form_for(@user_status) do |f| %>
      <tr>
        <td><%= f.radio_button :selected,'申請' %>申請</td>
        <td><%= f.radio_button :selected,'承認' %>承認</td>
      </tr>
    <tr>
      <td><%= f.companyname %></td>
      <% @skills.each do |f|  %>
        <td><%= f.skill_master.skilltype %></td>
      <% end %>
      <td><%= f.date %></td>
    </tr>
    <% end %>
  </table>

  <%= button_to('認証する', '/lecturer/update',
    method: "post", remote: true, data: { confirm: '認証しますか？', disable_with: 'loading...' }) %>
<% end %>

<%= debug @user_status %>

<% if !@company_name.nil? then %>
  <h3>予定</h3>
  <table border="1">
    <tr>
      <td>会社名</td>
      <td>スキル</td>
      <td>日付</td>
    </tr>
  
<% end %>
  </table>
