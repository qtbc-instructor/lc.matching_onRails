
<!--入力フォームの描画(userテーブルに基づく入力値)-->
<%= form_for user , url: {action: 'confirm'} do |f| %>
  <!--エラー表示-->
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--入力フォーム-->
  <div class='field'>
    <%= f.label :name , '名前：' %>
    <%= f.text_field :name %>
  </div>

  <!--usertype=1の時表示(企業名入力フォーム)-->
  <% if @user.usertype == 1 %>
    <%= f.fields_for :company do |cf| %>
      <div class='field'>
        <%= cf.label :companyname , '企業名：' %>
        <%= cf.text_field :companyname %>
      </div>
    <% end %>
  <% end %>

  <div class='field'>
    <%= f.label :tel , '電話番号：' %>
    <%= f.text_field :tel %>
  </div>

  <div class='field'>
    <%= f.label :mail_address , 'メールアドレス：' %>
    <%= f.text_field :mail_address %>
  </div>

  <div class='field'>
    <%= f.label :password , 'パスワード：' %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.hidden_field :usertype , :value => @user.usertype %>
  </div>

  <div class='actions'>
    <%= f.submit '確認'%>
  </div>
<% end %>
