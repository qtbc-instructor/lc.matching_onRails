<p id="notice"><%= notice %></p>


<h1>ようこそ</h1>

<!-- 申請中 -->
<h3>申し込み中</h3>
  <table border="5" frame="box">
  <thead>
    <tr>
      <th>name</th>
      <th>skilltype</th>
      <th>date</th>
    </tr>
  </thead>

  <tbody>
    <% @Applying.each do |applying| %>
      <tr>
        <td><%= applying.name %></td>
        <td><%= applying.skilltype %></td>
        <td><%= applying.date %></td>
        <td><%= link_to '取り消し', company_path(applying.id), method: :destroy, data: { confirm: '取り消していいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- 承認待ち -->
<h3>承認済み</h3>
<table border="5" frame="box">
<thead>
  <tr>
    <th>name</th>
    <th>skilltype</th>
    <th>date</th>
  </tr>
</thead>

<tbody>
  <% @Approval.each do |approval| %>
    <tr>
      <td><%= approval.name %></td>
      <td><%= approval.skilltype %></td>
      <td><%= approval.date %></td>
    </tr>
  <% end %>
</tbody>
</table>


<!-- 拒否 -->
<h3>拒否されました。</h3>
<table border="5" frame="box">
<thead>
  <tr>
    <th>name</th>
    <th>skilltype</th>
    <th>date</th>
  </tr>
</thead>

<tbody>
  <% @Denial.each do |denial| %>
    <tr>
      <td><%= denial.name %></td>
      <td><%= denial.skilltype %></td>
      <td><%= denial.date %></td>
      <td><%= link_to '確認', company_path(denial.id), method: :destroy %></td>
    </tr>
  <% end %>
</tbody>
</table>


<!-- 評価待ち -->
<h3>評価してください。</h3>
<table border="5" frame="box">
<thead>
  <tr>
    <th>name</th>
    <th>skilltype</th>
    <th>date</th>
  </tr>
</thead>

<tbody>

  <% @Score.each do |score| %>
  <%= form_tag(controller: :company, action: :index, method: :put) do %>
    <tr>
      <td><%= score.name %></td>
      <td><%= score.skilltype %></td>
      <td><%= score.date %></td>
      <td><%= select_tag 'score'+'score.id', options_for_select([0, 1, 2, 3, 4, 5]) %></td>
      <td><%= submit_tag '評価する' %></td>
    </tr>
  <% end %>
  <% end %>
</tbody>
</table>


